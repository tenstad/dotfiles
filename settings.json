    "editorWidget.background": "#150023",
    "input.background": "#150023",
    "listFilterWidget.background": "#150023",
    "panelSectionHeader.background": "#150023",

    "editorSuggestWidget.selectedBackground": "#3E2351",
    "list.activeSelectionBackground": "#3E2351",
    "list.hoverBackground": "#3E2351",

    "editorGroup.border": "#180028",
    "panelInput.border": "#180028",
    "sideBar.border": "#180028",
    "widget.shadow": "#180028",

    "panel.border": "#180028",
    "terminal.border": "#180028",

    "editorCursor.foreground": "#fff",

    "panelTitle.activeBorder": "#180028",
    "panelTitle.activeForeground": "#C678DD",
    "panelTitle.inactiveForeground": "#6C4B82",

    "editorLineNumber.activeForeground": "#744296",
    "editorLineNumber.foreground": "#4E3366",

    "terminal.ansiBrightMagenta": "#C678DD",
    "terminal.ansiBlue": "#0048B5",
    "terminal.ansiBrightBlue": "#0062ff",
    "terminal.ansiBrightCyan": "#56B6C2"
  },

  "editor.fontFamily": "'FiraCode Nerd Font Mono', 'SauceCodePro', Consolas, 'Courier New', monospace",
  "workbench.statusBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "zenMode.hideLineNumbers": false,
  "window.commandCenter": false,

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.lintTool": "golangci-lint",
  "go.lintOnSave": "workspace",
  "yaml.customTags": ["!reference sequence"],
  "files.autoSave": "afterDelay",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "window.zoomLevel": 1,
  "svelte.enable-ts-plugin": true,
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "remote.autoForwardPortsSource": "hybrid",
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "editor.renderWhitespace": "all",
  "code-eol.highlightExtraWhitespace": true,
  "code-eol.highlightNonDefault": true,
  "code-eol.newlineCharacter": "Â¬"
}
